<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/temporary_job_card_view"
    android:layout_width="132dp"
    android:layout_height="120dp"
    android:backgroundTint="#222235"
    android:layout_gravity="center_vertical"
    app:cardCornerRadius="14dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/is_temporary_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/temporary_job"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            android:gravity="left">
            <TextView
                android:id="@+id/temporary_job"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:lines="3"
                android:hint="Временная работа или подработка"
                android:textColorHint="#fff"
                android:textColor="#fff" />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>