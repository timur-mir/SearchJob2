<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="328dp"
    android:layout_height="233dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_favorite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#222235"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:strokeColor="#222235">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/look_caption_favorite"
                        android:layout_width="207dp"
                        android:layout_height="17dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/sfprodisplaymedium"
                        android:text="@string/now_looking"
                        android:textColor="#4cb24e"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/is_favorite_favorite1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="288dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="18dp"
                        android:src="@drawable/heart" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/vacanct_caption_favorite"
                        android:layout_width="207dp"
                        android:layout_height="19dp"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/sfprodisplayregular"
                        android:text="@string/Dizayner"
                        android:textColor="#FFF"
                        android:textSize="16sp" />
                </RelativeLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/company_town_favorite"
                    android:layout_width="89dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/town_vacant_favorite"
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:fontFamily="@font/sfprodisplaymedium"
                        android:text="Минск"
                        android:textColor="#FFF"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/company_caption_favorite"
                        android:layout_width="64dp"
                        android:layout_height="17dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/sfprodisplayregular"
                        android:includeFontPadding="false"
                        android:text="Мобирикс"
                        android:textColor="#FFF"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@id/town_vacant_favorite"
                        app:layout_constraintTop_toBottomOf="@id/town_vacant_favorite" />

                    <TextView
                        android:id="@+id/check_company_favorite"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/checked"
                        android:includeFontPadding="false"
                        app:layout_constraintBaseline_toBaselineOf="@+id/company_caption_favorite"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/company_caption_favorite"
                        app:layout_constraintTop_toTopOf="@id/company_caption_favorite" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/portfolio_scope_favorite"
                    android:layout_width="168dp"
                    android:layout_height="17dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:id="@+id/portfolio_icon_favorite"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/experience"
                        app:layout_constraintStart_toStartOf="@id/portfolio_scope_favorite"
                        app:layout_constraintTop_toTopOf="@id/portfolio_scope_favorite" />

                    <TextView
                        android:id="@+id/portfolio_caption_favorite"
                        android:layout_width="144dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfprodisplayregular"
                        android:includeFontPadding="false"
                        android:paddingLeft="4dp"
                        android:text="Опыт работы от 1 до 3 лет"
                        android:textColor="#FFF"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/portfolio_icon_favorite"
                        app:layout_constraintTop_toTopOf="@+id/portfolio_icon_favorite" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/published_time_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/sfprodisplayregular"
                    android:text="Опубликовано 20 февраля"
                    android:textColor="#858688"
                    android:textSize="14sp"></TextView>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/respond_favorite"
                android:layout_width="296dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="185dp"
                android:background="@drawable/button_shape"
                android:fontFamily="@font/sfprodisplayregular"
                android:gravity="center|center_vertical"
                android:padding="0dp"
                android:text="Откликнуться"
                android:textColor="#fff"
                android:textSize="14sp"></androidx.appcompat.widget.AppCompatButton>

        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
