<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="324dp"
    android:background="#000"
    android:id="@+id/top_level_d">

    <LinearLayout
        android:id="@+id/inner_level_d"
        android:layout_width="191dp"
        android:layout_height="48dp"
        android:layout_marginTop="45dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/top_level_d">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/response_img_d"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/avatar_ellipse" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="126dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/resume_for_response_d"
                android:layout_width="128dp"
                android:layout_height="17dp"
                android:fontFamily="@font/sfprodisplayregular"
                android:includeFontPadding="false"
                android:hint="Резюме для отклика"
                android:textColor="#858688"
                android:textColorHint="#858688"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/looked_some"
                android:layout_width="120dp"
                android:layout_height="19dp"
                android:hint="UI/UX дизайнер"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>
    <EditText
        android:id="@+id/edit_response_latter_d"
        android:layout_width="327dp"
        android:layout_height="85dp"
        android:layout_marginTop="141dp"
        android:layout_marginStart="17dp"
        android:focusable="true"
        android:textColor="#858688"
        android:textSize="12sp"
        android:fontFamily="@font/sfprodisplayregular"
        android:hint="Ваше сопроводительное письмо"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/response_click_button_dialog_d"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_marginTop="198dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/edit_shape2"
        android:gravity="center"
        android:text="Откликнуться"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/response_latter_d"
        android:layout_width="218dp"
        android:layout_height="21dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="157dp"
        android:gravity="center"
        android:fontFamily="@font/sfprodisplayregular"
        android:text="Добавить сопроводительное письмо"
        android:textColor="#4cb24e"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>