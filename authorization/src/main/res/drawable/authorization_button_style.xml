<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#2B7EFE" />
            <gradient android:angle="-90" android:startColor="#2B7EFE" android:endColor="#2B7EFE"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#2B7EFE"/>
            <solid android:color="#2B7EFE"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#00427D" />
            <gradient android:angle="-90" android:startColor="#00427D" android:endColor="#00427D" />
        </shape>
    </item>
</selector>